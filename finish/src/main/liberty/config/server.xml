<server description="Liberty Server for Sessions Management">

    <featureManager>
        <feature>servlet-4.0</feature>
        <!-- tag::sessionCache[] -->
        <feature>sessionCache-1.0</feature>
        <!-- end::sessionCache[] -->
        <feature>jaxrs-2.1</feature>
        <feature>jsonp-1.1</feature>
        <feature>mpOpenAPI-2.0</feature>
    </featureManager>

    <variable name="default.http.port" defaultValue="9080"/>
    <variable name="default.https.port" defaultValue="9443"/>
    <variable name="app.context.root" defaultValue="guide-sessions"/>
    <!-- tag::hazelcastLib[] -->
    <variable name="hazelcast.lib" defaultValue="${shared.resource.dir}/hazelcast.jar"/>
    <!-- end::hazelcastLib[] -->
     
    <!-- tag::InfinispanLib[] -->
    <variable name="infinispan.lib" defaultValue="${shared.resource.dir}/infinispan.jar"/>
    <!-- end::InfinispanLib[] -->

    <httpEndpoint httpPort="${default.http.port}" httpsPort="${default.https.port}"
        id="defaultHttpEndpoint" host="*" />
    <!-- tag::httpSessionCache[] -->
    <!-- <httpSessionCache libraryRef="jCacheVendorLib"
        uri="file:${server.config.dir}/hazelcast-config.xml" /> -->
    <!-- end::httpSessionCache[] -->
    <!-- tag::library[] -->
    <!-- <library id="jCacheVendorLib"> -->
    	<!-- tag::hazelcastjar[] -->
        <!-- <file name="${hazelcast.lib}" />  -->
        <!-- end::hazelcastjar[] -->
    <!-- </library>  -->
    <!-- end::library[] -->
     
    <httpSessionCache libraryRef="InfinispanLib" enableBetaSupportForInfinispan="true">
        <properties infinispan.client.hotrod.server_list="example-infinispan:11222"/>
        <properties infinispan.client.hotrod.auth_username="developer"/>
        <properties infinispan.client.hotrod.auth_password="fIkXLjVwyLkmohfc"/>
        <properties infinispan.client.hotrod.auth_realm="default"/>
        <properties infinispan.client.hotrod.sasl_mechanism="PLAIN"/>
        <properties infinispan.client.hotrod.marshaller="org.infinispan.commons.marshall.JavaSerializationMarshaller"/>
    </httpSessionCache>

    <library id="InfinispanLib">
        <file name="${infinispan.lib}" />
    </library>

    <webApplication location="guide-sessions.war" contextRoot="${app.context.root}" />

</server>
